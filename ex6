#include <iostream>
using namespace std;

int calls;

int fibonacci(int n){
  calls++;
  if (n==1)
    return 1;
  if (n==0)
    return 0;
  else {
    return fibonacci(n-1)+fibonacci(n-2);
  }
}

int main() {
  int n;
  cout << "Choose the value of n for the Fibonacci function to have the result such as f(n):";
  cin>>n;
  calls=0;
  cout<<"The result is "<<fibonacci(n);
  cout<<" and has been found with "<<calls<<" recursive calls.";
}
